<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentReviewAndUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please rate and review the course"
            android:layout_margin="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Course Name"
            android:paddingLeft="30dp"
            android:id="@+id/title"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:text="by Arun "
            android:id="@+id/tutor"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Rating: 1/5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ratingtext"
            ></TextView>
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:id="@+id/seekbar"
            android:min="1"
            android:max="5"
            android:stepSize="1"
            ></SeekBar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Review:"
            android:layout_margin="20dp"
            ></TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:gravity="top"
            android:hint="Enter Review for this course"
            android:inputType="textMultiLine"
            android:lines="7"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textSize="20dp"
            android:id="@+id/review"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:layout_margin="20dp"></Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>